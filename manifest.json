{
  "manifest_version": 3,
  "name": "Substack Cleaner",
  "version": "3.0",
  "description": "Customizable Substack cleaner - remove trending, notifications, and up next sections",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Substack Cleaner Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.substack.com/*",
        "*://substack.com/*"
      ],
      "css": ["styles.css"],
      "js": ["script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}